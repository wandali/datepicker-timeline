<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mti_month_width"
    android:layout_height="@dimen/mti_month_height"
    android:orientation="vertical"
    android:paddingEnd="@dimen/mti_month_lbl_padding"
    android:paddingLeft="@dimen/mti_month_lbl_padding"
    android:paddingRight="@dimen/mti_month_lbl_padding"
    android:paddingStart="@dimen/mti_month_lbl_padding"
    android:paddingTop="@dimen/mti_month_lbl_padding_top">

    <com.github.badoualy.datepicker.DotView
        android:id="@+id/mti_view_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/mti_month_lbl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mti_month_lbl_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="7"
        android:maxLines="2"
        android:textColor="@color/mti_default_primary"
        android:textSize="@dimen/mti_month_lbl_text"
        tools:text="February"/>

</FrameLayout>
