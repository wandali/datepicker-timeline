<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mti_month_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/mti_month_lbl_padding"
    android:paddingLeft="@dimen/mti_month_lbl_padding"
    android:paddingRight="@dimen/mti_month_lbl_padding"
    android:paddingStart="@dimen/mti_month_lbl_padding">

    <com.github.badoualy.datepicker.DotView
        android:id="@+id/mti_view_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mti_month_lbl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="7"
        android:maxLines="2"
        android:textColor="@color/mti_default_primary"
        android:textSize="@dimen/mti_month_lbl_text"
        tools:text="February" />

</FrameLayout>
